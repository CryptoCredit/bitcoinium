<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bitcoinaverage_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:stretchColumns="5" >

    <TableRow>

        <TextView
            android:id="@+id/bitcoinaverage_symbol"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#101010"
            android:text="Sym."
            android:textColor="#33B5E5"
            android:textSize="18sp" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#101010"
            android:gravity="center_horizontal"
            android:text="@string/last"
            android:textColor="#33B5E5"
            android:textSize="18sp" />
        <!--
        <TextView
            android:layout_weight="1"
            android:background="#101010"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:layout_height="fill_parent"
            android:text="Avg"
            android:textColor="#33B5E5" />
        -->

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#101010"
            android:gravity="center_horizontal"
            android:text="@string/vol"
            android:textColor="#33B5E5"
            android:textSize="18sp" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#101010"
            android:gravity="center_horizontal"
            android:text="@string/bid"
            android:textColor="#33B5E5"
            android:textSize="18sp" />

        <TextView
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:background="#101010"
            android:gravity="center_horizontal"
            android:text="@string/ask"
            android:textColor="#33B5E5"
            android:textSize="18sp" />
    </TableRow>

    <ScrollView
        android:id="@+id/bitcoinaverage_tablescroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1" >

        <TableLayout
            android:id="@+id/bitcoinaverage_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:showDividers="beginning"
            android:stretchColumns="5" >
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linlaHeaderProgress3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/pbHeaderProgress3"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >
        </ProgressBar>
    </LinearLayout>

    <WebView
        android:id="@+id/karma_ad"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_gravity="bottom|center_horizontal" />

</TableLayout>