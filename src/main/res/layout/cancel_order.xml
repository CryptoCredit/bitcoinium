<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FF9500">
<View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.09" >
<View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>
 <TextView
        android:id="@+id/cancelOrderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="CANCEL THIS ORDER?" />
<View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>
</LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >
<View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>

<TextView
    android:id="@+id/cancel_order_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="BUY"
    android:textSize="20sp" 
     android:textStyle="bold"/>
<View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>
        <TextView
        android:id="@+id/cancel_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="12.345" 
         android:textStyle="bold"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="BTC" 
         android:textStyle="bold"/>
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=" at " 
         android:textStyle="bold"/>
         <TextView
        android:id="@+id/cancel_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="66.234" 
         android:textStyle="bold"/>
         <TextView
        android:id="@+id/cancel_order_fiat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="USD" 
        android:textStyle="bold"/>
        <View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>
   </LinearLayout>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >
         <View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="ID:" />
         <TextView
        android:id="@+id/cancel_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="orderId" 
        android:textStyle="italic"/>
         <View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>
      </LinearLayout>
   

 
<View android:layout_width="0dp" android:layout_height="18dp" android:layout_weight="1"> </View>
</LinearLayout>