<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.veken0m.cavirtex"
    android:versionCode="60"
    android:versionName="@string/version_name">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bitcoiniumlogo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Bitcoinium">

        <activity
            android:name="com.veken0m.cavirtex.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.veken0m.cavirtex.WidgetProvider.ACTION_WIDGET_CONFIGURE" />
                <action android:name="com.veken0m.cavirtex.MinerWidgetProvider.ACTION_WIDGET_CONFIGURE" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.WidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.MinerWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.BalanceWidgetConfigureActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.OrderbookActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/orderbook"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.preferences.OrderbookPreferenceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/label_orderbookPreferences"
            android:parentActivityName="com.veken0m.cavirtex.OrderbookActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OrderbookActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.preferences.GraphPreferenceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/label_graphPreferences"
            android:parentActivityName="com.veken0m.cavirtex.GraphActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GraphActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.preferences.MinerPreferenceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/label_minerPreferences"
            android:parentActivityName="com.veken0m.cavirtex.MinerStatsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.BitcoinChartsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/bitcoinCharts"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.BitcoinAverageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/bitcoinAverage"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.GraphActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/label_priceGraph"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.MinerStatsActivity"
            android:label="@string/label_minerStats"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.preferences.PreferencesActivity"
            android:label="@string/label_preferences"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.preferences.PriceAlertPreferencesActivity"
            android:label="@string/label_priceAlertSettings"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            <intent-filter>
                <action android:name="com.veken0m.cavirtex.PriceAlertPreferencesActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.veken0m.cavirtex.WebViewerActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/label_webCharts"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name="com.xeiam.xbtctrader.XTraderActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="XTrader PREVIEW"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name="com.xeiam.xbtctrader.PreferenceActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="XTrader"
            android:parentActivityName="com.veken0m.cavirtex.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <receiver
            android:name="com.veken0m.cavirtex.WidgetProvider"
            android:label="@string/widget_price">
            <intent-filter>
                <action android:name="com.veken0m.cavirtex.WidgetProvider.ACTION_WIDGET_RECEIVER" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>
        <service android:name="com.veken0m.cavirtex.WidgetProvider$UpdateService" />

        <receiver
            android:name="com.veken0m.cavirtex.MinerWidgetProvider"
            android:label="@string/widget_mining">
            <intent-filter>
                <action android:name="com.veken0m.cavirtex.MinerWidgetProvider.ACTION_WIDGET_RECEIVER" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/miner_appwidget_info" />
        </receiver>
        <service android:name="com.veken0m.cavirtex.MinerWidgetProvider$MinerUpdateService" />

        <receiver
            android:name="com.veken0m.cavirtex.BalanceWidgetProvider"
            android:exported="false"
            android:label="@string/balance_widget_name">
            <intent-filter>
                <action android:name="com.veken0m.cavirtex.BalanceWidgetProvider.ACTION_WIDGET_RECEIVER" />
                <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info_balance" />
        </receiver>

        <service android:name="com.veken0m.cavirtex.BalanceWidgetProvider$BalanceUpdateService" />
    </application>

</manifest>